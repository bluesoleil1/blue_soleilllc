# ============================================
# Blue Soleil LLC - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user@localhost:5432/blue_soleil"

# ============================================
# Authentication & Security
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET="generate-a-secure-random-string-here-min-32-chars"
NODE_ENV="development"

# ============================================
# Email Configuration (Resend)
# ============================================
RESEND_API_KEY="re_your_resend_api_key_here"
EMAIL_FROM="Blue Soleil LLC <info@bluesoleil.com>"
EMAIL_REPLY_TO="info@bluesoleil.com"
ADMIN_EMAIL="admin@bluesoleil.com"

# ============================================
# Frontend Environment Variables
# ============================================
VITE_GOOGLE_MAPS_API_KEY=""
VITE_API_URL="/api"

# ============================================
# Domain Configuration
# ============================================
PRODUCTION_URL="https://bluesoleil.com"

# ============================================
# Development Only
# ============================================
SKIP_EMAIL_IN_DEV="false"
